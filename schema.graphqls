type Post {
  id: ID!
  title: String!
  content: String!
  commentsAllowed: Boolean!
}

type Comment {
  id: ID!
  content: String!
  postID: ID!
  parentID: ID
}

type Query {
  posts: [Post!]!
}

type Mutation {
  createPost(title: String!, content: String!): Post!
  addComment(postID: ID!, parentID: ID, content: String!): Comment!
}
